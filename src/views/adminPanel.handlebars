<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel de Administraci√≥n de Usuarios</title>
  <!-- Agrega la referencia a Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .container {
      margin-top: 50px;
    }

    h1 {
      color: #007bff;
    }

    .table {
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
      text-align: center;
    }

    .btn-danger, .btn-info {
      margin-right: 5px;
    }

  </style>
</head>

<body>

  <div class="container">
    <h1 class="mb-4">User's administration Panel</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Rol</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <td>{{this._id}}</td>
            <td>{{this.first_name}} {{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.rol}}</td>
            <td>
              <button type="button" class="btn btn-danger deleteUserButton" user-id="{{this._id}}">
                Delete
              </button>
              <button type="button" class="btn btn-info changeRolButton" user-id="{{this._id}}">
                Change Rol
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Agrega la referencia a Bootstrap JS y Popper.js -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", () => {
  const deleteButtons = document.querySelectorAll(".deleteUserButton");

  deleteButtons.forEach((button) => {
    button.addEventListener("click", async () => {
      try { 
        var confirmation = confirm('are you sure you want to delete this user?');
        if (confirmation) {
        const userId = button.getAttribute("user-id");
        const response = await fetch(`/api/users/${userId}`, {
          method: "DELETE",
        });
        if (response.ok) {
          alert("User deleted!");
          redirect("/api/users/adminPanel");
          window.location.reload(); 
        }} else {
          alert("Failed to delete the user");
        }
      } catch (error) {
        console.error("Error:", error);
      }
    });
  });
});

</script>




<script>

   document.addEventListener("DOMContentLoaded", () => {
  const deleteButtons = document.querySelectorAll(".changeRolButton");

  deleteButtons.forEach((button) => {
    button.addEventListener("click", async () => {
      try { 
        var confirmation = confirm('are you sure you want to change this user Rol?');
        if (confirmation) {
        const userId = button.getAttribute("user-id");
        const response = await fetch(`/api/users/premium/${userId}`, {
          method: "GET",
        });
        if (response.ok) {
          alert("User Rol Changed!");
          redirect("/api/users/adminPanel");
          window.location.reload(); 
        }} else {
          alert("Failed to change user Rol");
        }
      } catch (error) {
        console.error("Error:", error);
      }
    });
  });
});
</script>
