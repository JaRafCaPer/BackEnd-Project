<section class="container mt-3" style="margin: 0 auto;">
  <div class="row">
    <div class="col-lg-6" style="margin: 0 auto;">
      <h2 class="titulo-categoria">Categorias</h2>
      <form id="form-category">
        <div class="mb-3">
          <label for="category" class="form-label">Seleccione una categoría</label>
          <select id="category" name="category" class="form-select" required>
            <option selected disabled>Seleccione una opción</option>
            {{#each category}}
              <option value="{{name}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Ordenar por precio</label>
          <select id="price" name="sort" class="form-select" required>
            <option selected disabled>Seleccione una opción</option>
            <option value="1">Menor Precio</option>
            <option value="-1">Mayor Precio</option>
            <option value="0">No ordenar</option>
          </select>
        </div>
        <div class="d-flex flex-column">
          <button class="btn btn-primary" type="submit">FILTRAR</button>
          <a class="" href="/" style="width: 100%;">
            <button
              class="btn btn-primary"
              style="width: 100%;margin-top:20px"
            >Volver</button>
          </a>
        </div>
      </form>
    </div>
    <h2 style="text-align: center;margin-top:20px;">TODOS LOS PRODUCTOS</h2>
  </div>
</section>
<section
  class="cards contenedor"
  id="cards-product"
  style="margin-bottom: 20px;"
>
  {{#each products}}
    <div class="card" style="width: 30rem;">
      <img class="card-img-top" src="{{thumbail}}" alt="Card image cap" />
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-stock">Stock: {{stock}}</p>
        <p class="card-price">${{price}}</p>
        <p class="_id">ID: {{_id}}</p>
      </div>
    </div>
  {{/each}}
</section>

{{cid}}

<section class="pagination contenedor3">
  <div class="pagination-container">
    {{#if products.hasPrevPage}}
      <a href={{products.prevLink}}>Anterior</a>
    {{/if}}
    {{#if products.prevPageValidate}}
      <a href={{products.prevLink}}>{{products.prevPage}}</a>
    {{/if}}
    {{#if products.page}}
      <p class="pagination-text">{{products.page}}</p>
    {{/if}}
    {{#if products.nextPageValidate}}
      <a href={{products.nextLink}}>{{products.nextPage}}</a>
    {{/if}}
    {{#if products.hasNextPage}}
      <a href={{products.nextLink}}>Siguiente</a>
    {{/if}}
  </div>
</section>

<section class="formulario-realTimeProducts contenedor5">
  <div class="formulario-real">
    <h3 style="text-transform:uppercase">Crear Productos</h3>
    <form id="formCreate" class="formulario-grid">
      <label for="title">Title: </label>
      <input
        id="title"
        placeholder="Ingrese el titulo aqui"
        type="text"
        name="title"
        required
      />
      <label for="descripcion">Descripcion: </label>
      <input
        id="descripcion"
        type="text"
        placeholder="Ingrese la descripcion"
        name="descripcion"
        required
      />
      <label for="code">Code: </label>
      <input
        id="code"
        placeholder="Ingrese el code aqui"
        type="text"
        name="code"
        required
      />
      <label for="price">Price: </label>
      <input
        id="price"
        type="number"
        placeholder="Ingrese el precio"
        min="1"
        name="price"
        required
      />
      <label for="status">Status: </label>
      <select id="status" name="status" required>
        <option class="option" selected="" disabled>Select one</option>
        <option class="option" value="0">true</option>
        <option class="option" value="1">false</option>
      </select>
      <label for="stock">Stock: </label>
      <input
        id="stock"
        placeholder="Ingrese el stock aqui"
        type="number"
        min="0"
        name="stock"
        required
      />
      <label for="category-select">category: </label>
      <select name="category">
        <option selected="" disabled required>Select one</option>
        {{#each category}}
          <option class="option" value="{{this.name}}">{{this.name}}</option>
        {{/each}}
      </select>
      <label for="thumbail">Thumbail: </label>
      <input
        id="thumbail"
        placeholder="Ingrese el thumbail aqui"
        type="text"
        name="thumbail"
        required
      />
      <button class="btn" type="submit" id="create">Crear Producto </button>
    </form>
    <p class="txtfont">Recuerde rellenar todos los campos.
    </p>
  </div>
  <div class="formulario-delete">
    <h3>Eliminar productos</h3>
    <form class="form-delete" id="formDelete">
      <label for="id">ID: </label>
      <input type="text" name="id" required />
      <button class="btn" type="submit" id="create">Eliminar producto</button>
    </form>
  </div>
</section>

