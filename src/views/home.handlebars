{{#if user}}
<h1>Wellcome: {{user}}</h1>
{{/if}}
<label class="pt-5 ms-5" for="bebidas">category:</label>
    <select id="category-select" name="category">
        <option value="">All</option>
        {{#each this.categories}}
          <option value="{{category}}">{{this}}</option>
        {{/each}}
      </select>
<label for="ordenar">order:</label>
    <select id="ordenar" name="ordenar" id="">Ascendant
        <option value="1">Descendant</option>
        <option value="-1">Ascendant</option>
    </select>
    <button class="filter" onclick="filter()">Filter</button>
    <a href="/">Clean</a>
<div class="d-flex flex-wrap ms-4 p-5">
{{#each docs}}
    <div class="card card__container p-5" style="width: 24rem;">
        <img height="300" src={{this.image}} class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.price}}</p>
            {{#if this.status}}
            <p class="card-text">Stock: {{{this.stock}}}</p>
            {{else}}
            <p class="card-text">0</p>
            {{/if}}
            <div class="diiv">
                <a class="detalles btn btn-primary" href="/detail/{{this._id}}" >Details</a>
                <button id="addCart" onclick="addCart('{{this._id}}')"  class="addcart btn btn-success">Add to cart</button>
            </div>
            
        </div>
    </div>
{{/each}}
</div>
<div class="ms-5 mb-5">
    {{#if hasPrevPage}}
        <a class="ms-2" href={{prevLink}}>Prev</a>
    {{/if}}

     {{#if hasPrevPage}}
        <a class="ms-2" href={{prevLink}}>{{prevPage}}</a>
    {{/if}}

        <a class="ms-2" href={{nextLink}}>{{page}}</a>
    {{#if hasNextPage}}
        <a class="ms-2" href={{nextLink}}>{{nextPage}}</a>
    {{/if}}

    {{#if hasNextPage}}
        <a class="ms-2" href={{nextLink}}>Next</a>
    {{/if}}
    
</div>



