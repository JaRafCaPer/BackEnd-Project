<body style="background-color: aliceblue;">

  <div class="container mt-4">
    <h2>Products</h2>
    <h3 class="text-center display-4">Welcome {{user.rol}}: {{user.first_name}} {{user.last_name}}</h3>

    <div class="row">
      <form id="formulario">
        
        <div class="mt-3">
          <input type="hidden" name="page" id="query-page" value={{products.products.page}} />          
      <p>Page {{products.products.page}} of {{products.products.totalPages}}</p>
    </div>
    <nav aria-label="Page navigation" style="max-width: 20%; margin: 0 auto;">
      <ul class="pagination justify-content-center" style="gap: 5px">
        <li class="page-item">
          {{#if productsPrev}}
            <a class="page-link" href="{{productsPrev}}" aria-label="Anterior">
              <span aria-hidden="true">&laquo;</span>
            </a>
          {{/if}}
        </li>
        <li class="page-item">
          {{#if productsNext}}
            <a class="page-link" href="{{productsNext}}" aria-label="Siguiente">
              <span aria-hidden="true">&raquo;</span>
            </a>
          {{/if}}
        </li>
      </ul>
    </nav>
    <div class="form-group col-md-3">
          <select class="form-control" id="query-limit">
            <option value="">Products per Page</option>
            <option value="10">10</option>
            <option value="24">24</option>
            <option value="50">50</option>
          </select>
        </div>
        <div class="form-group col-md-6">
          <select name="sort-select" id="sort-select" class="form-control">
            <option value="1">Min price Up</option>
            <option value="-1">Max price Up</option>
          </select>
        </div>
        <div class="form-group col-md-6">
          <select name="category" id="category-select" class="form-control">
            <option value="">Todas las categorías</option>
            {{#each categories}}
              <option value={{this}}>{{this}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group col">
          <input type="hidden" name="sort-order" id="sort-order" value="-1" />
          <button type="submit" class="btn btn-primary">Cargar</button>
        </div>
      </form>
    </div>

    <div class="row">
      {{#each products.products.docs}}
        <div class="col-md-3 p-3">
          <div class="card">
            <img class="card-img-top" src="{{thumbnail}}" alt="{{name}}" style="width: 100%; height: 300px;">
            <div class="card-body" style="background-color: rgb(6, 27, 25); color: white;">
              <h5 class="card-title">{{{title}}}</h5>
              <p class="card-text text-truncate">{{description}}</p>
              <p class="card-text">{{price}}</p>
              <a href="/api/products/{{_id}}" class="btn btn-primary">Ver detalles</a>
              <form action="/api/cart/{{@root.cartId}}/products/{{_id}}" method="POST">
                <input type="hidden" name="products[0][item]" value="{{_id}}" />
                <input type="number" name="quantity" value="1" min="1" max="100" class="form-control">
                <button type="submit" class="btn btn-success mt-2">Agregar al carrito</button>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</body>
<script>

  
 const formulario = document.getElementById('formulario');

  formulario.addEventListener('submit', function (event) {
    event.preventDefault(); // Evita la recarga predeterminada del formulario

    // Obtiene los valores de los campos de selección
    const page = document.getElementById('query-page').value;
    const sortOrder = document.getElementById('sort-select').value;
    const limit = document.getElementById('query-limit').value;
    const category = document.getElementById('category-select').value;

    // Construye la URL con los parámetros de consulta
    const url = `/api/products?page=${page}&sort=${sortOrder}&limit=${limit}&category=${category}`;

    // Redirecciona a la nueva URL
    window.location.href = url;
  });
  </script>