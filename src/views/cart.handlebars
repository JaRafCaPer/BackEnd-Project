<h1
  style="text-align: center;text-transform: uppercase;margin-bottom: 20px;"
>BIENVENIDO A TU CARRITO {{first_name}} {{last_name}}!</h1>

<div class="container">
  {{#each cart.products}}
    <div class="carrito-producto">
      <img class="card-img-top" src="{{pid.thumbail}}" alt="Card image cap" />
      <div>
        <h5 class="card-title-card">{{pid.title}}</h5>
        <p class="card-descripcion-cart">Descripción: {{pid.descripcion}}</p>
        <p class="card-descripcion-cart">ID: {{pid._id}}</p>
        <p class="card-descripcion-cart">Code: {{pid.code}}</p>
      </div>
      <div>
        <p style="font-size: 40px;color:white;margin-bottom:20px;">Total: ${{total}}</p>
        <p class="card-price-cart" style="font-size:30px">
          C/u: ${{pid.price}}</p>
      </div>
      <div class="cart-gestion">
        <a
          style="text-decoration: none;font-size: 50px;color:white;"
          href="/api/cart/delete/{{pid._id}}"
        >-</a>
        <h5 class="quantity">Quantity: {{quantity}}</h5>
        <a
          style="text-decoration: none;font-size: 50px;color:white;"
          href="/api/cart/pid/{{pid._id}}"
        >+</a>
        <a
          class="keep"
          href="/products"
          style=" none;font-size: 20px;color:white;text-decoration:none;"
        >keep buying</a>
      </div>
    </div>
  {{/each}}
</div>

<h2
  style="text-align: center;font-size:30px;margin-bottom:20px;text-transform:uppercase;"
>Total a pagar: ${{total}}</h2>

<div style="d-flex justify-content-center">
  <a href="/api/cart/{{cart._id}}/purchase" style="margin-left:50%">
    <button class="btn" style="margin: 0 auto;">Finalizar compra</button>
  </a>
</div>

