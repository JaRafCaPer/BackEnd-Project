<!DOCTYPE html>
<html>
<head>
  <title>Shopping Cart</title>
</head>
<body>
  <h1>Your Shopping Cart</h1>
  <ul>
    {{#each cart.products}}
      <li>
        <h3>{{this.item.name}}</h3>
        <p>Price: ${{this.item.price}}</p>
        <p>Quantity: {{this.quantity}}</p>
        <p>Description: {{this.item.description}}</p>
        <p>Category: {{this.item.category}}</p>
        <p>Status: {{this.item.status}}</p>
        <p>Stock: {{this.item.stock}}</p>
        <img src="{{this.item.image}}" alt="{{this.item.name}}">
      </li>
    {{/each}}
  </ul>
</body>
</html>
